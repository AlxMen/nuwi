generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
  role     String
  ext      Int
  email    String       @unique
  exps     Proceeding[]
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  index Int
  slug  String
}

model Proceeding {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  nExp       Int
  name       String
  type       String
  status     String     @default("Presentaci√≥n")
  applicant  String
  createdexp String
  lastupdate String?
  userId     String     @db.ObjectId
  lastuser   User       @relation(fields: [userId], references: [id])
  documents  Document[]
}

model Document {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  regisNumber String
  date        String
  path        String
  proceedId   String     @db.ObjectId
  proceed     Proceeding @relation(fields: [proceedId], references: [id])
}

model Ministerio {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
}

model Gobierno {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  conserjeria     String
  viceconserjeria String?
}

model Cabildo {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  conserjeria String?
  servicio    String?
}

model Ayuntamiento {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model AsociacionesEco {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  direccion String
  cp        Int
}

model AsociacionesVec {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  direccion String
  cp        Int
  municipio String
}

model AsociacionesCaza {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model Emergencia {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
